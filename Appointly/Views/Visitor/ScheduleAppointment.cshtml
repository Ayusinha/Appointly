@model Appointly.Models.Appointment


@{ 
    ViewData["Title"] = "Create a new Appointmet ";
    Layout = "~/Views/Shared/_Layout_Visitor.cshtml"; 
}

<div class="ml-auto">
    <form asp-action="ScheduleAppointment" asp-route-id="@ViewBag.Fid">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @*<label>Faculty Id</label>
        <div class="ids form-group input-group col-lg-12 mb-4">
            <input asp-for="Faculty_Id" value="@ViewBag.Fid" placeholder="Faculty_Id" class="form-control bg-white border-md " />
            <span asp-validation-for="Faculty_Id" class="text-danger"></span>
        </div>*@

        <label>From </label>
        <div class="form-group input-group col-lg-12 mb-4">
            <input asp-for="_From" type="datetime-local" placeholder="From" class="form-control bg-white border-md" />
            <span asp-validation-for="_From" class="text-danger"></span>
        </div>

        <label>To</label>
        <div class="form-group input-group col-lg-12 mb-4">
            <input asp-for="_To" type="datetime-local" placeholder="To" class="form-control bg-white border-md" />
            <span asp-validation-for="_To" class="text-danger"></span>
        </div>

        <label>Purpose </label>
        <div class="form-group input-group col-lg-12 mb-4">
            <input asp-for="Purpose" name="Purpose" placeholder="Purpose" class="form-control bg-white border-md" />
            <span asp-validation-for="Purpose" class="text-danger"></span>
        </div>

        <div class="form-group input-group col-lg-12 mb-4">
            <input type="submit" value="Schedule your appointment" class="btn btn-primary btn-block font-weight-bold" />
        </div>
        <br />
        <b id="getoff">@ViewBag.message</b>
        <br />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>$(document).ready(() => {

        $(".ids").hide();

    });</script>